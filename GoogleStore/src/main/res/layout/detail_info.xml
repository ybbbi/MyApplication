<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listview_home_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_default" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listview_home_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:singleLine="true"
                android:text="hhahahahah"
                android:textColor="@color/txt_title"
                android:textSize="16sp" />

            <RatingBar

                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_marginTop="3dp"
                android:progressDrawable="@drawable/ratingbar_drawable"
                android:rating="3" />


        </LinearLayout>
    </LinearLayout>

    <!--下载，版本号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/detailinfo_tv_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="下载："
            android:textColor="@color/txt_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detailinfo_tv_version"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="版本："
            android:textColor="@color/txt_title"
            android:textSize="14sp" />


    </LinearLayout>
    <!--日期 大小-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/detailinfo_tv_date"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="日期："
            android:textColor="@color/txt_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/detailinfo_tv_size"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="大小："
            android:textColor="@color/txt_title"
            android:textSize="14sp" />


    </LinearLayout>


</LinearLayout>